<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>" />     <br/>
                    </div>
                    
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"> <%= blog.title %> </a>  
                        <div class="meta">
                            <span> <%= blog.created.toDateString() %></span>        
                        </div>
                        <div class="description">
                            <p> <%- blog.body.substring(0, 100) %>... </p>        
                        </div>
                        
                        <!--
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>"> 
                                Read More
                                <i class="right chevron icon"></i>
                            </a>  
                        </div>
                        -->
        
                        <br />
                        <a class="" href="/blogs/<%= blog._id %>"> 
                            <div class="ui animated button" tabindex="0">
                                <div class="visible content">
                                        Read More    
                                </div>
                                <div class="hidden content">
                                        <i class="right chevron icon small"></i>    
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            <% }) %>            
        </div>
    </div>
</div>

<br/><br/>
<% include partials/footer %> 